{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
